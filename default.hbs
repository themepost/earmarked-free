<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{{meta_title}}</title>

	<link rel="stylesheet" href="{{asset "fonts/google/stylesheet.css"}}">
	<link rel="stylesheet" href="{{asset "fonts/fontawesome/css/all.min.css"}}">
	<link rel="stylesheet" href="{{asset "css/screen.css"}}">

	{{ghost_head}}
</head>

<body class="{{body_class}}">

	<div id="page" class="hfeed site">

		<header id="masthead" class="site-header">
			<div class="header-wrapper">
				<nav id="site-navigation" class="main-navigation">
					<button class="menu-toggle">Menu</button>
					{{navigation}}
				</nav><!-- #site-navigation -->

				<div id="site-search" class="header-search">
					<span class="search-icon">
						<span class="search-toggle"><span class="screen-reader-text" data-ghost-search>Search</span></span>
					</span>
				</div><!-- #search -->

				<div class="gh-search gh-icon-btn" data-ghost-search><span class="search-toggle"></span></div>
			</div><!-- .header-wrapper -->

			{{> "header-img"}}
		</header><!-- #masthead -->

		<div id="content" class="site-content">

			<div id="primary" class="content-area">
				<main id="main" class="site-main">
					{{{body}}}
				</main><!-- #main -->
			</div><!-- #primary -->

			<div id="secondary" class="widget-area">
				<aside class="widget">
					<h1 class="site-title"><a href="{{@site.url}}">{{@site.title}}</a></h1>
					<p class="site-description">{{@site.description}}</p>
				</aside>

				<aside class="widget" id="sidebar-links">
					<ul id="sidebar-externals">
						{{> external-sidebar}}
					</ul>
				</aside>

				<footer class="site-footer">
					<div class="site-info">
						Powered by <a href="https://ghost.org/" target="_blank">Ghost</a> &amp; <a href="https://themepost.dev/">Earmarked</a>
					</div>
				</footer>
			</div><!-- #secondary -->

		</div><!-- #content -->
	</div><!-- #page -->

	{{! Ghost outputs important scripts and data with this tag }}
	{{ghost_foot}}

	{{! The main JavaScript files}}
	<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
	<script type="text/javascript" src="{{asset "js/index.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/navigation.js"}}"></script>

</body>
</html>
